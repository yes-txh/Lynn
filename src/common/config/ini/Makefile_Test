# global variables
COMMON := ../../

# project settings
project.debug    := 1
project.includes := $(COMMON)../

# ini_file
project.targets       := ini_file_test
project.tests         := ini_file_test
ini_file_test.sources := ini_file.cc ini_file_test.cc
ini_file_test.ldadd   := /usr/local/lib/libgtest.a -lpthread

# configer_utility
project.targets          += ini_utility_test
project.tests            += ini_utility_test
ini_utility_test.sources := ini_utility_test.cc
ini_utility_test.ldadd   := /usr/local/lib/libgtest.a -lpthread

# memory_configer
project.targets                  += memory_ini_configer_test
project.tests                    += memory_ini_configer_test
memory_ini_configer_test.sources := memory_ini_configer.cc memory_ini_configer_test.cc
memory_ini_configer_test.ldadd   := /usr/local/lib/libgtest.a -lpthread

# file_configer
project.targets                += file_ini_configer_test
project.tests                  += file_ini_configer_test
file_ini_configer_test.sources := ini_file.cc file_ini_configer.cc file_ini_configer_test.cc
file_ini_configer_test.ldadd   := /usr/local/lib/libgtest.a -lpthread

# makefile framework
include ${COMMON}builder/Generic.mak
